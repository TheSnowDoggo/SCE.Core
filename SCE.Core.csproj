<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
	<TargetType>exe</TargetType>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>SCE.Core</PackageId>
    <Title>SCE.Core</Title>
	<AssemblyName>SCE.Core</AssemblyName>
    <Version>1.1.0-RC.6</Version>
	<VersionSuffix>Pre-alpha</VersionSuffix>
    <Authors>Adam Giaziri</Authors>
    <Product>SCECore</Product>
    <Description>SCE Utilities and Types required by all SCE assemblies.</Description>
    <Copyright>MIT License</Copyright>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <NeutralLanguage>en</NeutralLanguage>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>sgKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="scripts\classes\searchhash\**" />
    <EmbeddedResource Remove="scripts\classes\searchhash\**" />
    <None Remove="scripts\classes\searchhash\**" />
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
